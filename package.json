{
    "name": "atlas-of-sol",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": ">=24 <25"
    },
    "scripts": {
        "dev": "next dev --turbopack",
        "prebuild": "npm run content:validate",
        "build": "next build",
        "start": "next start",
        "lint": "eslint",
        "typecheck": "tsc --noEmit",
        "content:validate": "tsx scripts/content/validate.ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepare": "husky"
    },
    "dependencies": {
        "lucide-react": "^0.575.0",
        "motion": "^12.34.3",
        "next": "16.1.6",
        "react": "19.2.3",
        "react-dom": "19.2.3"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "eslint-config-next": "16.1.6",
        "eslint-config-prettier": "^10.1.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.6.2",
        "tailwindcss": "^4",
        "tsx": "^4.21.0",
        "typescript": "^5",
        "zod": "^4.1.5"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,mjs,cjs,json,css,md,yml,yaml}": [
            "prettier --write"
        ]
    }
}
